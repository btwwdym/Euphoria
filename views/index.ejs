<div class="main-content">
    <h1 class="title">Discover amazing places in Euphoria</h1>
    <p class="description">Unlock the Joy of Discovery with Euphoria: The Ultimate Travel Companion.</p>
    <div class="block-registration">
        <button class="signup">Sign up</button>
        <a href="/discover" class="login discover">Discover</a>
    </div>
</div>
<div class="swiper mySwiper" style=
    "--swiper-pagination-color: hsla(0, 0%, 95.7%, 0.8);;
    --swiper-pagination-bullet-width: 16px;
    --swiper-pagination-bullet-height: 16px;
    --swiper-pagination-bullet-inactive-color:#383838;">
    <div class="swiper-wrapper">
        <% data.forEach(article => { %>
            <div class="swiper-slide">
              <a href="/post/<%= article._id  %>">
                  <div class="places-card">
                      <div class="places-card_image-wrap">
                          <img loading="lazy" src="<%= article.img  %>" alt="" class="image">
                      </div>
                      <div class="places-card_image-overlay"></div>
                      <div class="places-card_content">
                          <div class="places-card_country-text"><%= article.mintitle  %></div>
                          <h3 class="places-card_heading-text"><%= article.title  %></h3>
                          <div class="places-card_desc-wrap" >
                            <p class="places-card_desc-text"><%= article.body.slice(0, 55) %>....</p>
                          </div>
                      </div>
                  </div>
              </a>
            </div>
        <% }) %>
      <div class="swiper-slide"></div>
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-scrollbar"></div>
    <div class="swiper-pagination"></div>
</div>
<div class="temporary_class">
    <div class="registration_container" id="container">
        <div class="form-container sign-up">
            <form  action="/register" method="post">
                <i class="ri-arrow-left-circle-line arrow_signin"></i>
                <h1>Create Account</h1>
                <span class="hide">Invalid credentials</span>
                <input type="text" placeholder="First Name" name="firstName">
                <input type="text" placeholder="Last Name" name="lastName">
                <input type="email" placeholder="Email" name="email">
                <input type="password" placeholder="Password" name="password">
                <button type="submit" >Sign Up</button>
            </form>
        </div>
        <div class="form-container sign-in">
            <form class="form" action="/login" method="post">
                <i class="ri-arrow-right-circle-line arrow_signup"></i>
                <h1>Sign In</h1>
                <span class="validation_registration hide">Invalid credentials</span>
                <input type="email" placeholder="Email" name="email">
                <input type="password" placeholder="Password" name="password">

                <button type="submit" class="submit_btn">Sign In</button>
            </form>
        </div>
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <h1>Welcome Back!</h1>
                    <p>Enter your personal details to use all of site features</p>
                    <button class="hidden" id="login">Sign In</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <h1>Hello, Friend!</h1>
                    <p>Register with your personal details to use all of site features</p>
                    <button class="hidden" id="register">Sign Up</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="bg"></div>

